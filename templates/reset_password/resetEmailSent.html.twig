{% extends 'base.html.twig' %}

{% block title %}Hello ResetPasswordController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello an Email have been sent to you ✅</h1>


        {% if error %}
            <p>{{ error }}</p>
        {% else %}
            <p>Un lien vous à été envoyé à {{ emailSent }} merci de cliquer dessus pour changer votre mot de
                passe!</p>
        {% endif %}

        <h3>If you want to ReSend the email resubmit this form</h3>
        {{ form(resetPasswordRequestForm) }}
    </div>
{% endblock %}
